@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "Home Page";
    var user = UserManager.GetUserAsync(User).Result;
    var isTeacher = user != null && UserManager.IsInRoleAsync(user, "Teacher").Result;
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div class="mt-4">
        <a class="btn btn-primary" href="/Home/Join">Join Course</a>
        @if (isTeacher)
        {
            <a class="btn btn-success" href="/Home/Create">Create Course</a>
        }
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-4 col-lg-3 mb-4">
                <a href="/Course/Details/@course.Id" class="card course-card text-decoration-none">
                    <div class="card-body">
                        <h5 class="card-title text-white">@course.Name</h5>
                        <p class="card-subtitle text-white-50 d-flex align-items-center">
                            Key: <span id="key-@course.Id" class="ms-2">@course.PublicKey</span>
                        </p>
                    </div>
                </a>
                <form method="post" action="/Home/Leave">
                    <input type="hidden" name="courseId" value="@course.Id" />
                    <button type="submit" class="btn btn-danger mt-2">Leave Course</button>
                </form>
                <button class="btn btn-sm btn-light ms-2" onclick="copyKey(event, '@course.Id')">📋</button>
            </div>

        }
    </div>
</div>

<script>
    function copyKey(event, courseId) {
        event.stopPropagation();

        var keyElement = document.getElementById("key-" + courseId);
        var textArea = document.createElement("textarea");
        textArea.value = keyElement.innerText;
        document.body.appendChild(textArea);
        textArea.select();
        document.execCommand("copy");
        document.body.removeChild(textArea);
    }
</script>

<style>
    .course-card {
        background: linear-gradient(135deg, #3f51b5, #1a237e);
        border-radius: 10px;
        padding: 20px;
        color: white;
        display: flex;
        align-items: center;
        height: 120px;
        transition: transform 0.2s, box-shadow 0.2s;
        cursor: pointer;
    }

        .course-card:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        }

        .course-card h5 {
            font-size: 1.2rem;
            margin-bottom: 5px;
        }

        .course-card p {
            font-size: 0.9rem;
            margin-bottom: 0;
        }

    .btn-sm {
        padding: 2px 6px;
        font-size: 0.8rem;
    }
</style>